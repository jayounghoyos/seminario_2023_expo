  section {
    width: 100%;
    height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1rem;
    line-height: 1.6;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  li {
    margin-left: 0;
  }

  /* Estilos para las imágenes */
  img {
    max-width: 100%;
    height: auto;
    width: 500px;
    height: auto;
    border: solid white 1px;
    border-radius: 14px;
